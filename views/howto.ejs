          <div class="modal-content">
            <center>
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" style="color: #353535;">Login Using twitter</h4>
              </div>
              <div class="modal-body">
                <a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span>Twitter Login</a>
              </div>
            </center>
          </div>
        </div>
      </div>
      <!--- Twitter popup end -->


