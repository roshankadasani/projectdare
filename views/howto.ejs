  <!-- Loading different background at random -->
    <script type="text/javascript">
    window.onload = function () {    
        var thediv = document.getElementById("bg");
        var imgarray = new Array("gif1.gif", "gif2.gif", "gif3.gif", "gif4.gif", "gif5.gif");
        var spot = Math.floor(Math.random()* imgarray.length);
        thediv.style.background = "url(images/"+imgarray[spot]+")";
